<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <link rel="Shortcut Icon" href="http://img1.yilos.com/portal/nail/imgs/logo.png">
    <%- include header.ejs %>
</head>
<% if (store_type == "chain") { %>

<style>
    .menu li:nth-child(1), .menu li:nth-child(3) {
        width: 33.5%;
    }
    .menu li:nth-child(2){
        width: 33%;
    }
</style>

<% } %>

<body>

<div id="content" class="content">
    <%- body %>
</div>

<div id="empty-placeholder" style="width: 100%;height: 49px" class="<% if (menu == 'none') { %>none<% } %>"></div>

<ul id="menu" class="menu <% if (menu == 'none') { %>none<% } %>">
    <li class="<% if (menu == 'store') { %>selected<% } %>">
        <a class="block" href="/svc/wsite/<%= app_id %>/<%= enterprise_id %>/shop">
            <i class="icon icon-store"></i>

            <div>店铺信息</div>
        </a>
    </li>
    <li class="<% if (menu == 'item') { %>selected<% } %>">
        <a class="block" href="/svc/wsite/<%= app_id %>/<%= enterprise_id %>/item">
            <i class="icon icon-item"></i>

            <div>服务分类</div>
        </a>
    </li>
    <li class="<% if (menu == 'member') { %>selected<% } %>">
        <a class="block" href="/svc/wsite/<%= app_id %>/<%= enterprise_id %>/member">
            <i class="icon icon-member"></i>

            <div>会员专区</div>
        </a>
    </li>
    <li class="<% if (menu == 'festival') { %>selected<% } %>">
        <a class="block" href="/svc/wsite/<%= app_id %>/<%= enterprise_id %>/festival">
            <i class="icon icon-activity"></i>
            <div>优惠活动</div>
        </a>
    </li>
</ul>

</body>

</html>
