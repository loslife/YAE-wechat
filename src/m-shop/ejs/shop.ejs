<% if(env === "dev"){ %>

<%- Loader()
        .js("/m-shop/static/shop.js")
        .js("http://api.map.baidu.com/api?type=quick&ak=077cf00d4471f3852b96fba32ff879fd&v=1.0")
        .css("/m-shop/static/css/shop.css")
        .done(config) %>

<% }else{ %>

<%- Loader()
        .js("/m-shop/shop.min.js")
        .js("http://api.map.baidu.com/api?type=quick&ak=077cf00d4471f3852b96fba32ff879fd&v=1.0")
        .css("/m-shop/css/shop.min.css")
        .done(config) %>

<% } %>

<div id="m-shop">
    <div class="home-img">
        <div class="img" style="background:url('<%= store.picUrl %>') no-repeat">
        </div>
        <div class="store-name"><%= store.name %></div>
    </div>

    <% if(festivals.length > 0){ %>
    <div class="preferential">
        <div class="mb-1 lh-2">
            <div class="fr item-more">
                <a class="" href="/svc/wsite/<%= enterprise_id %>/festival">更多</a>
            </div>
            <div>优惠活动</div>
        </div>

        <ul class="preferential-list">
            <% festivals.forEach(function (item) { %>
            <li onclick="location.href='/svc/wsite/<%= enterprise_id %>/route?fid=<%= item.id %>'">
                <div style="background: url('<%= item.pic_url %>') no-repeat;">
                </div>
                <div>
                    <span class="inline-block vm festivalsInfo">
                        <div class="festivalsTitle"><%= item.title %></div>
                        <div class="color-gray festivalsDesc"><%= item.short_desc %></div>
                    </span><span class="desc-vm-help"></span>
                </div>
            </li>
            <% }); %>
        </ul>
    </div>
    <% } %>

    <% if(hotList.length !== 0){ %>
    <div class="item">
        <div class="mb-1 lh-2">
            <div class="fr item-more">
                <a class="" href="/svc/wsite/<%= enterprise_id %>/item">更多</a>
            </div>
            <div>特色项目</div>
        </div>

        <ul class="item-list ofh">
            <% for(var i = 0; i < hotList.length; i++) { %>
            <li>
                <a href="/svc/wsite/<%= enterprise_id %>/itemDetail/<%= hotList[i].itemId %>">
                    <div class="item-img" style="background: url('<%= hotList[i].imgPath %>') no-repeat">
                    </div>

                    <div><%= hotList[i].name %></div>
                    <div class="item-comment"><%= hotList[i].comment %></div>
                </a>
            </li>
            <% } %>
        </ul>
    </div>
    <% } %>

    <div class="store">
        <div class="store-img" style="background: url('<%= store.logUrl %>') no-repeat; background-size: 100px"></div>
        <div class="store-name mh-20"><%= store.name %></div>

        <div>
            <div class="fl color-gray">电话：</div>
            <div class="mh-20"><%= store.phone %></div>
        </div>
        <div>
            <div class="fl color-gray">营业时间：</div>
            <div class="mh-20"><%= store.workHour %></div>
        </div>

        <div class="clear-fix mt-2">
            <div class="fl color-gray">店铺地址：</div>
            <div style="padding-left:5em;" class="mh-20"><%= store.addr %></div>
        </div>
        <div>
            <div class="fl color-gray">营业项目：</div>
            <div style="padding-left:5em;" class="mh-20"><%= store.operateStr %></div>
        </div>
        <div class="mb-0">
            <div class="fl color-gray">简介：</div>
            <div style="padding-left:3em;" class="mh-20"><%= store.comment %></div>
        </div>
    </div>
    <div id="mapDiv" style="margin: 10px 5px 0px 5px;" class="<% if (!store.addr) { %>none<% } %>">

        <div id="hidden_area">
            <div id="store_addr"><%= store.addr %></div>
        </div>

        <div id="enterpriseMap" style="height: 150px;"></div>

    </div>
</div>