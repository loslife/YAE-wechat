<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <link rel="Shortcut Icon" href="http://img1.yilos.com/portal/nail/imgs/logo.png">
    <script src="/svc/portal/setting"></script>
    <title>购买乐斯服务</title>
    <!--<script src="http://127.0.0.1:5001/svc/portal/setting"></script>-->
</head>

<!-- 共用的资源 -->
<% if(env === "dev"){ %>

<%- Loader()
        .css("/resource/css/base.css")
        .css("/member-binding/css/input_phone.css")
        .done(config) %>

<% }else{ %>

<%- Loader()
        .css("/resource/css/wechat.min.css")
        .css("/member-binding/css/input_phone.min.css")
        .done(config) %>

<% } %>

<!-- 场景特有的资源 -->
<style>
    .btn_binding input{
        background-color: #f75169;
        color: white;
        border: none;
        width: 100%;
        height: 40px;
        -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
        -webkit-border-radius: 4px;
        border-radius: 4px;
        -webkit-appearance: none;
    }
    .btn_binding input:active{
        background: #e2354f;
    }
</style>

<body style="user-select: none;-webkit-user-select: none;">

<div id="m-binding">

    <div class="form-area">
        <div class="text-center border-bottom">

            <img src="/resource/member_icon.png" style="height: 14px; position: relative;top: 2px;">
            <span style="color: #8d8d8d;">
                购买乐斯服务
            </span>

        </div>
        <form class="width-full" action="/svc/meiyeguanjia/redirect" method="post">

            <div class="input_phone">
                <input type="tel" name="phone" placeholder="请输入乐斯美业管家账号">
            </div>

            <div class="open_id" >
                <input type="hidden" id="open_id" value="<%= open_id %>" name="open_id">
            </div>

            <div class="btn_binding">
                <input type="submit" value="确定">
            </div>

        </form>
    </div>

    <% if(nouser == "nouser"){ %>
    <br />
    <span style="color: #f75169;font-weight: bold" >充值账号不存在</span>
    <% } %>

</div>

</body>

</html>