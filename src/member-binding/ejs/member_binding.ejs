<%- Loader()
        .js('/member-binding/binding.js')
        .css("/member-binding/css/binding.css")
        .done(config) %>

<div id="wechat_member_binding">

    <form>

        <span id="open_id" style="display: none"><%= open_id %></span>
        <span id="enterprise_id" style="display: none"><%= enterprise_id %></span>

        <div>
            <label for="phone">手机号</label>
            <input type="text" id="phone" name="phone">
        </div>

        <div>
            <label for="pwd">验证码</label>
            <input type="text" id="code" name="code">
        </div>

        <button id="getSecurityCode" type="button">获取验证码</button>
        <button id="btn_binding" type="button">立即绑定</button>

    </form>

</div>