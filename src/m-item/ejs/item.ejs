<% if(env === "dev"){ %>

<%- Loader().js("/m-item/static/item.js").css("/m-item/static/css/item.css").done(config) %>

<% }else{ %>

<%- Loader().js('/m-item/item.min.js').css("/m-item/css/item.min.css").done(config) %>

<% } %>

<div id="m-item">

    <% if(shelveList.length === 0){ %>

    <div id="empty-list-image">
        <img src="../../../resource/no_products.png">
    </div>

    <div id="empty-list-msg">店家还没上线任何产品</div>

    <% }else{ %>

    <ul class="item-list">
        <% for(var i = 0; i < shelveList.length; i++) { %>
        <li>
            <a href="/svc/wsite/<%= enterprise_id %>/itemDetail/<%= shelveList[i].itemId %>">
                <div class="item-img" style="background: url('<%= shelveList[i].imgPath %>') no-repeat">
                </div>

                <div><%= shelveList[i].name %></div>
                <div class="color-red">￥<%= Number(shelveList[i].price).toFixed(1) %></div>
            </a>
        </li>
        <% } %>
    </ul>

    <div class="more-item">更多精品服务欢迎到店体验</div>

    <% } %>

</div>
