<% if(env === "dev"){ %>

<%- Loader()
        .js('/m-festival/static/askForShare.js')
        .css("/m-festival/static/css/askForShare.css")
        .done(config) %>

<% }else{ %>

<%- Loader()
        .js('/m-festival/askForShare.min.js')
        .css("/m-festival/css/askForShare.min.css")
        .done(config) %>

<% } %>

<div id="m-festival-share">

    <div id="festival-introduce">

        <% if(festival.pic_url){ %>
        <div class="img" style="background: url('/svc/public/wechat/<%= enterprise_id %>/<%= festival.pic_url %>') no-repeat">
        <% }else{ %>
        <div class="img" style="background: url('/svc/public/wechat/festivals_default.png') no-repeat">
        <% } %>

            <div class="title">
                <img src="/resource/star.png">
                <span id="f_title"><%= festival.title %></span>
            </div>

        </div>

        <div class="field">
            <div class="fl color-gray">活动时间：</div>
            <div style="padding-left: 5rem"><%= dateFormat(new Date(festival.begin_date), "MM月DD日")%> - <%= dateFormat(new Date(festival.end_date), "MM月DD日")%></div>
        </div>

        <div class="field">
            <div class="fl color-gray">活动详情：</div>
            <div id="f_desc" style="padding-left: 5rem"><%= festival.description %></div>
        </div>

        <% if(duplicated){ %>

            <div class="btn">
                <button disabled>已领取</button>
            </div>

        <% }else if(!expired){ %>

            <div class="btn">
                <button id="btn_share">领取</button>
            </div>

        <% } %>

    </div>

    <% if(!duplicated && expired){ %>

    <div id="input-area">
        <img src="/resource/no_more_present.png">
        <div id="finish-msg">来晚了一步，已经被领完啦！</div>
    </div>

    <% } %>

    <div id="hidden_area" style="display: none">
        <div id="enterprise_id"><%= enterprise_id %></div>
        <div id="festival_id"><%= festival.id %></div>
        <div class="store-name"><%= store.name %></div>
        <div id="app_id"><%= app_id %></div>
    </div>

</div>

<a id="back" class="back clear-fix">看看其它</a>

<div id="share_tips" style="display: none">
    <img id="tips_arrow" src="/resource/share_guide_arrow.png">
    <img id="tips_text" src="/resource/share_guide_text.png">
</div>