<% if(env === "dev"){ %>

<%- Loader()
        .css("/m-festival/css/festivals.css")
        .js("/m-festival/festivals.js")
        .done(config) %>

<% }else{ %>

<%- Loader()
        .js('/m-festival/festivals.min.js')
        .css("/m-festival/css/festivals.min.css")
        .done(config) %>

<% } %>

<div id="m-festival">

    <% if(festivals.length === 0){ %>

    <span id="empty-list-msg">暂时没有优惠活动</span>

    <% }else{ %>

    <ul id="festival-list">

        <% for(var i = 0; i < festivals.length; i++) { %>

        <li class="festival-item">

            <div class="item-header">
                <div class="title"><%= festivals[i].title %></div>
            </div>

            <% if(festivals[i].pic_url){ %>
                <img src="/svc/public/wechat/<%= enterprise_id %>/<%= festivals[i].pic_url %>">
            <% }else{ %>
                <img src="../../../resource/logo.jpg">
            <% } %>

            <div class="item-desc"><%= festivals[i].desc %></div>

            <span style="display: none"><%= festivals[i].id %></span>

        </li>

        <% } %>

    </ul>

    <% } %>

</div>

