<%- Loader()
        .css("/m-festival/static/css/result.css")
        .done(config) %>

<% }else{ %>

<%- Loader()
        .css("/m-festival/css/result.min.css")
        .done(config) %>

<% } %>

<% if(type === "success"){ %>
    <div id="m-festival-done" class="success">
<% }else{ %>
    <div id="m-festival-done" class="repeat">
<% } %>

    <% if(type === "success"){ %>

        <img src="/resource/diamond.png">

        <% if(isMember === "no"){ %>
        <div>已发送短信至您的手机，请凭短信到店消费。</div>
        <% } %>

    <% }else{ %>

        <img src="/resource/present_got_duplicate.png">
        <div>已经领取过一次了，下次再来吧！</div>

    <% } %>

</div>

<div id="follow">

    <% if(subscribe === "0"){ %>

    <div>关注我们的公众号，了解更多精彩活动</div>
    <a href="#">关注公众号</a>

    <% }else if(isMember === "yes"){ %>

